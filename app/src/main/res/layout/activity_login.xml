<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/fp_logo2" />

    <EditText
        android:id="@+id/Id_edit"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:backgroundTint = "@color/white"
        android:textColorHint="#999999"
        android:textColor="@color/white"
        android:hint="ID"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Pw_edit"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@id/Id_edit"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint = "@color/white"
        android:textColorHint="#999999"
        android:textColor="@color/white"
        android:hint="Password"
        android:inputType="textEmailAddress" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Pw_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/back_round"
        android:textColor="@color/black"
        android:text="로그인" />

    <TextView
        android:id="@+id/text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="공식 홈페이지에서만 회원가입이 가능합니다."
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="https://kmc7582s.cafe24.com/FingerPay/login.php"
        android:autoLink="web"
        android:linksClickable="true"
        android:textColor="#999999" />



</RelativeLayout>